{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "module": "esnext",
    "target": "es5",
    "allowJs": false,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    //    "experimentalDecorators": true,
    "downlevelIteration": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "paths": {
      //      "@alkaid/*": ["../../packages/*", "../../formily/*"],
      //      "@alkaid/shared": ["src/alkaid/shared"],
      "@trionesdev/designable-shared": ["../../packages/shared/src"],
      //      "@alkaid/core": ["src/alkaid/core"],
      "@trionesdev/designable-core": ["../../packages/core/src"],
      "@trionesdev/designable-core/*": ["../../packages/core/src/*"],
      //      "@alkaid/react": ["src/alkaid/react"],
      "@trionesdev/designable-react": ["../../packages/react/src"],
      //      "@alkaid/react-settings-form": ["src/alkaid/react-settings-form"],
      "@trionesdev/designable-react-settings-form": [
        "../../packages/react-settings-form/src"
      ],

      "@trionesdev/designable-flow": ["../../packages/flow/src"]
    }
  },
  "include": ["src", "../../packages/*/src", "../../formily/*/src"]
}
